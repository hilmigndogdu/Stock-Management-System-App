<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintTop_toBottomOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDesign"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="15dp"
        >
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/updatecard"
            >

            <ImageView
                android:id="@+id/productimg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintWidth_percent="0.45"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@color/white"
                />

            <TextView
                android:id="@+id/productTxt"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintHeight_percent="0.15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/productimg"
                app:layout_constraintTop_toTopOf="@id/productimg"
                android:textColor="@color/white"
                android:text="Television"
                android:textSize="25sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/categoryTxt"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.15"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintTop_toBottomOf="@id/productTxt"
                app:layout_constraintStart_toStartOf="@id/productTxt"
                android:layout_marginTop="5dp"
                android:text="Technology"
                android:textSize="18sp"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/brandTxt"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.15"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintTop_toBottomOf="@id/categoryTxt"
                app:layout_constraintStart_toStartOf="@id/categoryTxt"
                android:layout_marginTop="5dp"
                android:text="Samsung"
                android:textSize="18sp"
                android:textColor="@color/white"
                />

            <Button
                android:id="@+id/selectBtn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/categoryTxt"
                app:layout_constraintStart_toStartOf="@id/categoryTxt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.98"
                app:layout_constraintHorizontal_bias="0.15"
                app:layout_constraintWidth_percent="0.35"
                app:layout_constraintHeight_percent="0.20"
                android:text="Select!"
                android:textSize="15sp"
                android:backgroundTint="@color/blue"
                />







        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>